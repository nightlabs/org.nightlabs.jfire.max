<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.nightlabs.ipanema.reporting"
   name="ODA Driver for JDOQL (Server Side)"
   version="1.0"
   provider-name="NightLabs.org"
   class="org.nightlabs.ipanema.reporting.ReportPlugin">
   <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire JDOQL Driver"
            driverClass="org.nightlabs.ipanema.reporting.oda.jdoql.server.ServerJDOQLDriver"
            id="org.nightlabs.ipanema.reporting.oda.jdoql.JDOQLDriver"
            odaVersion="3.0"
            setThreadContextClassLoader="false">
      </dataSource>
      <dataSet
            defaultDisplayName="JDOQL Data Set"
            displayNameID="org.nightlabs.ipanema.reporting.oda.jdoql.JDOQLDataSet"
            id="org.nightlabs.ipanema.reporting.oda.jdoql.JDOQLDataSet">
         <dataTypeMapping
               nativeDataType="String"
               nativeDataTypeCode="1"
               odaScalarDataType="String"/>
         <dataTypeMapping
               nativeDataType="Integer"
               nativeDataTypeCode="2"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Double"
               nativeDataTypeCode="3"
               odaScalarDataType="Double"/>
         <dataTypeMapping
               nativeDataType="Boolean"
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Date"
               nativeDataTypeCode="5"
               odaScalarDataType="Date"/>
         <dataTypeMapping
               nativeDataType="BigDecimal(Long)"
               nativeDataTypeCode="6"
               odaScalarDataType="Integer"/>
      </dataSet>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire JDO JavaScript Driver"
            driverClass="org.nightlabs.ipanema.reporting.oda.jdojs.server.ServerJDOJSDriver"
            id="org.nightlabs.ipanema.reporting.oda.jdojs.JDOJSDriver"
            odaVersion="3.0"
            setThreadContextClassLoader="false">
      </dataSource>
      <dataSet
            defaultDisplayName="JDO JavaScript Data Set"            
            id="org.nightlabs.ipanema.reporting.oda.jdojs.JDOJSDataSet">
         <dataTypeMapping
               nativeDataType="String"
               nativeDataTypeCode="1"
               odaScalarDataType="String"/>
         <dataTypeMapping
               nativeDataType="Integer"
               nativeDataTypeCode="2"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Double"
               nativeDataTypeCode="3"
               odaScalarDataType="Double"/>
         <dataTypeMapping
               nativeDataType="Boolean"
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Date"
               nativeDataTypeCode="5"
               odaScalarDataType="Date"/>
         <dataTypeMapping
               nativeDataType="BigDecimal(Long)"
               nativeDataTypeCode="6"
               odaScalarDataType="Decimal"/>
         <properties>
            <property
                  canInherit="true"
                  defaultDisplayName="fetchscript"
                  isEncryptable="false"
                  name="fetchScript"
                  type="string"/>
         </properties>
      </dataSet>
    </extension>

</plugin>
