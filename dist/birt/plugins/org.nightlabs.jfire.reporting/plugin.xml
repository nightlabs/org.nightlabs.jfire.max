<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.nightlabs.jfire.reporting"
   name="ODA Driver for Server Side JFire DataSources"
   version="1.0"
   provider-name="NightLabs.org">
<!--
   <runtime>
      <library name="lib/JFireReporting.jar">
         <export
               name="*">
         </export>
      </library>
   </runtime>
-->
   <requires>
      <import plugin="org.eclipse.datatools.connectivity.oda"/>
   </requires>
   <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire JDOQL Driver"
            driverClass="org.nightlabs.jfire.reporting.oda.server.jdoql.ServerJDOQLDriver"
            id="org.nightlabs.jfire.reporting.oda.jdoql.JDOQLDriver"
            odaVersion="3.0"
            setThreadContextClassLoader="false">
      </dataSource>
      <dataSet
            defaultDisplayName="JDOQL Data Set"
            displayNameID="org.nightlabs.jfire.reporting.oda.jdoql.JDOQLDataSet"
            id="org.nightlabs.jfire.reporting.oda.jdoql.JDOQLDataSet">
         <dataTypeMapping
               nativeDataType="String"
               nativeDataTypeCode="1"
               odaScalarDataType="String"/>
         <dataTypeMapping
               nativeDataType="Integer"
               nativeDataTypeCode="2"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Double"
               nativeDataTypeCode="3"
               odaScalarDataType="Double"/>
         <dataTypeMapping
               nativeDataType="Boolean"
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Date"
               nativeDataTypeCode="5"
               odaScalarDataType="Date"/>
         <dataTypeMapping
               nativeDataType="Time"
               nativeDataTypeCode="92"
               odaScalarDataType="Time"/>
         <dataTypeMapping
               nativeDataType="Timestamp"
               nativeDataTypeCode="93"
               odaScalarDataType="Timestamp"/>
         <dataTypeMapping
               nativeDataType="BigDecimal(Long)"
               nativeDataTypeCode="6"
               odaScalarDataType="Integer"/>
      </dataSet>
   </extension>
   <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire JDO JavaScript Driver"
            driverClass="org.nightlabs.jfire.reporting.oda.server.jdojs.ServerJDOJSDriver"
            id="org.nightlabs.jfire.reporting.oda.jdojs.JDOJSDriver"
            odaVersion="3.0"
            setThreadContextClassLoader="false">
      </dataSource>
      <dataSet
            defaultDisplayName="JDO JavaScript Data Set"            
            id="org.nightlabs.jfire.reporting.oda.jdojs.JDOJSDataSet">
         <dataTypeMapping
               nativeDataType="String"
               nativeDataTypeCode="1"
               odaScalarDataType="String"/>
         <dataTypeMapping
               nativeDataType="Integer"
               nativeDataTypeCode="2"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Double"
               nativeDataTypeCode="3"
               odaScalarDataType="Double"/>
         <dataTypeMapping
               nativeDataType="Boolean"
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Date"
               nativeDataTypeCode="5"
               odaScalarDataType="Date"/>
         <dataTypeMapping
               nativeDataType="Time"
               nativeDataTypeCode="92"
               odaScalarDataType="Time"/>
         <dataTypeMapping
               nativeDataType="Timestamp"
               nativeDataTypeCode="93"
               odaScalarDataType="Timestamp"/>
         <dataTypeMapping
               nativeDataType="BigDecimal(Long)"
               nativeDataTypeCode="6"
               odaScalarDataType="Decimal"/>
         <properties>
            <property
                  canInherit="true"
                  defaultDisplayName="fetchscript"
                  isEncryptable="false"
                  name="fetchScript"
                  type="string"/>
         </properties>
      </dataSet>
    </extension>
    
    <extension
         point="org.eclipse.datatools.connectivity.oda.dataSource">
      <dataSource
            defaultDisplayName="JFire Server Side Script Driver"
            driverClass="org.nightlabs.jfire.reporting.oda.server.jfs.ServerJFSDriver"
            id="org.nightlabs.jfire.reporting.oda.jfs.JFSDriver"
            odaVersion="3.0"
            setThreadContextClassLoader="false">
      </dataSource>
      <dataSet
            defaultDisplayName="Server Side JFire Script Data Set"            
            id="org.nightlabs.jfire.reporting.oda.jfs.JFSDataSet">
         <dataTypeMapping
               nativeDataType="String"
               nativeDataTypeCode="1"
               odaScalarDataType="String"/>
         <dataTypeMapping
               nativeDataType="Integer"
               nativeDataTypeCode="2"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Double"
               nativeDataTypeCode="3"
               odaScalarDataType="Double"/>
         <dataTypeMapping
               nativeDataType="Boolean"
               nativeDataTypeCode="4"
               odaScalarDataType="Integer"/>
         <dataTypeMapping
               nativeDataType="Date"
               nativeDataTypeCode="5"
               odaScalarDataType="Date"/>
         <dataTypeMapping
               nativeDataType="Time"
               nativeDataTypeCode="92"
               odaScalarDataType="Time"/>
         <dataTypeMapping
               nativeDataType="Timestamp"
               nativeDataTypeCode="93"
               odaScalarDataType="Timestamp"/>
         <dataTypeMapping
               nativeDataType="BigDecimal(Long)"
               nativeDataTypeCode="6"
               odaScalarDataType="Decimal"/>
<!--         <dataTypeMapping
               nativeDataType="JavaObject"
               nativeDataTypeCode="2000"
               />
               -->
      </dataSet>
    </extension>    

</plugin>
