			<scope>provided</scope>
		</dependency>
		
		<dependency>
		    <groupId>javax.jdo</groupId>
		    <artifactId>jdo-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
		    <groupId>log4j</groupId>
		    <artifactId>log4j</artifactId>
			<scope>provided</scope>
		</dependency>		
		<dependency>
			<groupId>jboss.aop</groupId>
			<artifactId>jboss-aop-jdk50</artifactId>
